<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="stylesheets/style.css">


<div class="container" style="width:50%">
    <br>
    <div class="row">
        <br>

        <div class="col-sm">
            <div class="card text-center">

                <%= form_tag charges_path do %>
                <article>
                    <% if flash[:error].present? %>
                    <div id="error_explanation">
                        <p>
                            <%= flash[:error] %>
                        </p>
                    </div>
                    <% end %>
                    <label class="amount">
                        <span>Amount:
                            <%= @amount.to_f/100 %> euros</span>
                    </label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="A month's subscription" data-amount="<%= @amount %>" data-locale="auto"></script>
                <% end %>
                <br>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>













<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% current_user.current_cart.line_items.each_with_index do |line_item, i| %>
    <tr>
      <td><%= line_item.item.title %></td>
      <td><%= line_item.item.description %></td>
      <td><%= line_item.item.price %></td>
      <td><%= line_item.item.image_url %></td>
      <td><%= button_to "Supprimer du panier", line_item_path(line_item.id), :method=>:delete, :remote => true %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Back', carts_path %>
